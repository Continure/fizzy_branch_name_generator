<% content_for :title, "GitHub Branch Name Generator" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-xl p-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Branch Name Generator</h1>
      <p class="text-gray-600 mb-8">Generate GitHub branch names from Fizzy cards</p>

      <% if @error.present? %>
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
          <p class="text-red-800"><%= @error %></p>
        </div>
      <% end %>

      <%= form_with url: branch_names_path, method: :get, local: true, class: "space-y-6" do |f| %>
        <% if @access_token.blank? %>
          <div>
            <%= f.label :access_token, "Access Token", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :access_token,
                value: @access_token,
                placeholder: "Your Fizzy access token",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition",
                required: true %>
            <p class="mt-1 text-xs text-gray-500">Get your token from Fizzy profile → API → Personal access tokens. Token will be saved in session.</p>
          </div>
        <% else %>
          <div class="p-3 bg-green-50 border border-green-200 rounded-lg">
            <p class="text-sm text-green-800">
              <span class="font-medium">Token saved.</span>
              <%= link_to "Change", branch_names_path(access_token: ""), class: "text-indigo-600 hover:underline ml-2" %>
            </p>
          </div>
        <% end %>

        <% if @access_token.present? %>
          <div>
            <%= f.label :platform, "Platform", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="flex gap-6">
              <label class="flex items-center">
                <%= f.radio_button :platform, "dashboard", checked: (@platform == "dashboard"), class: "mr-2 text-indigo-600 focus:ring-indigo-500" %>
                <span class="text-sm text-gray-700">Dashboard</span>
              </label>
              <label class="flex items-center">
                <%= f.radio_button :platform, "mobile", checked: (@platform == "mobile"), class: "mr-2 text-indigo-600 focus:ring-indigo-500" %>
                <span class="text-sm text-gray-700">Mobile</span>
              </label>
            </div>
            <p class="mt-1 text-xs text-gray-500">Dashboard: <code class="bg-gray-100 px-1 rounded">49-send-photo-without-tap</code> | Mobile: <code class="bg-gray-100 px-1 rounded">49-mob-send-photo-without-tap</code></p>
          </div>
        <% end %>

        <% if @accounts.present? && @account_slug.blank? %>
          <div>
            <%= f.label :account_slug, "Select Account", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :account_slug,
                options_for_select(@accounts.map { |a| [a["name"], a["slug"]] }, @account_slug),
                { prompt: "Select an account" },
                { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition" } %>
          </div>
        <% elsif @access_token.present? %>
          <div>
            <%= f.label :account_slug, "Account Slug", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :account_slug,
                value: @account_slug,
                placeholder: "/897362094",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition" %>
            <p class="mt-1 text-xs text-gray-500">Account slug (e.g., /897362094)</p>
          </div>
        <% end %>

        <% if @account_slug.present? %>
          <div>
            <%= f.label :card_number, "Card Number (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :card_number,
                value: @card_number,
                placeholder: "Leave empty to see all cards",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition" %>
            <p class="mt-1 text-xs text-gray-500">Leave empty to see a list of all cards</p>
          </div>
        <% end %>

        <% if @access_token.present? %>
          <div>
            <%= f.submit @account_slug.present? ? "Load Cards" : "Load Accounts",
                class: "w-full bg-indigo-600 text-white py-3 px-4 rounded-lg font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition cursor-pointer" %>
          </div>
        <% end %>
      <% end %>

      <% if @cards_with_branches.present? %>
        <div class="mt-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Tasks and Branch Names</h2>
          <div class="space-y-4">
            <% @cards_with_branches.each do |item| %>
              <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                      <span class="text-sm font-semibold text-indigo-600">#<%= item[:card]["number"] %></span>
                      <% if item[:card]["url"].present? %>
                        <%= link_to item[:card]["url"], target: "_blank", rel: "noopener noreferrer", class: "text-lg font-semibold text-gray-900 hover:text-indigo-600 transition flex items-center gap-2" do %>
                          <%= item[:card]["title"] %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                          </svg>
                        <% end %>
                      <% else %>
                        <h3 class="text-lg font-semibold text-gray-900"><%= item[:card]["title"] %></h3>
                      <% end %>
                    </div>
                    <% if item[:card]["board"].present? %>
                      <div class="mb-3">
                        <p class="text-sm text-gray-500 mb-1">Board:</p>
                        <% if item[:card]["board"]["url"].present? %>
                          <%= link_to item[:card]["board"]["url"], target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center gap-2 px-3 py-1.5 bg-indigo-50 text-indigo-700 rounded-lg hover:bg-indigo-100 transition text-sm font-medium" do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                            </svg>
                            <%= item[:card]["board"]["name"] %>
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                            </svg>
                          <% end %>
                        <% else %>
                          <span class="text-sm text-gray-700"><%= item[:card]["board"]["name"] %></span>
                        <% end %>
                      </div>
                    <% end %>
                    <div class="bg-gradient-to-r from-indigo-50 to-purple-50 rounded-lg p-4 border border-indigo-200">
                      <p class="text-xs font-medium text-gray-600 mb-2">Branch Name:</p>
                      <div class="flex items-center justify-between bg-white rounded-lg p-3 border border-gray-200">
                        <code class="text-base font-mono text-indigo-700 flex-1 break-all"><%= item[:branch_name] %></code>
                        <button
                          data-controller="copy"
                          data-copy-text-value="<%= item[:branch_name] %>"
                          data-action="click->copy#copy"
                          class="ml-3 px-3 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition flex-shrink-0"
                          title="Copy">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                          </svg>
                        </button>
                      </div>
                      <p class="mt-2 text-xs text-gray-600">
                        <code class="bg-gray-100 px-1 py-0.5 rounded text-xs">git checkout -b <%= item[:branch_name] %></code>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @card.present? && @branch_name.present? %>
        <div class="mt-8 p-6 bg-blue-50 rounded-lg border-2 border-blue-200">
          <h2 class="text-lg font-semibold text-gray-800 mb-3">Card Information:</h2>
          <div class="space-y-2 text-sm">
            <p><span class="font-medium">Number:</span> <%= @card["number"] %></p>
            <p>
              <span class="font-medium">Title:</span>
              <% if @card["url"].present? %>
                <%= link_to @card["url"], target: "_blank", rel: "noopener noreferrer", class: "text-indigo-600 hover:text-indigo-800 hover:underline inline-flex items-center gap-1" do %>
                  <%= @card["title"] %>
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                <% end %>
              <% else %>
                <%= @card["title"] %>
              <% end %>
            </p>
            <% if @card["board"].present? %>
              <p>
                <span class="font-medium">Board:</span>
                <% if @card["board"]["url"].present? %>
                  <%= link_to @card["board"]["url"], target: "_blank", rel: "noopener noreferrer", class: "text-indigo-600 hover:text-indigo-800 hover:underline inline-flex items-center gap-1 ml-1" do %>
                    <%= @card["board"]["name"] %>
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  <% end %>
                <% else %>
                  <span class="ml-1"><%= @card["board"]["name"] %></span>
                <% end %>
              </p>
            <% end %>
          </div>
        </div>

        <div class="mt-8 p-6 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-lg border-2 border-indigo-200">
          <h2 class="text-lg font-semibold text-gray-800 mb-3">Branch Name:</h2>
          <div class="flex items-center justify-between bg-white rounded-lg p-4 border border-gray-200">
            <code class="text-lg font-mono text-indigo-700 flex-1 break-all"><%= @branch_name %></code>
            <button
              data-controller="copy"
              data-copy-text-value="<%= @branch_name %>"
              data-action="click->copy#copy"
              class="ml-4 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition flex-shrink-0"
              title="Copy">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
          </div>
          <p class="mt-3 text-sm text-gray-600">
            <span class="font-medium">Example command:</span>
            <code class="block mt-1 text-xs bg-gray-100 px-2 py-1 rounded">git checkout -b <%= @branch_name %></code>
          </p>
        </div>
      <% end %>
    </div>

    <div class="mt-8 bg-white rounded-lg shadow-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">How it works?</h2>
      <ul class="space-y-3 text-gray-700">
        <li class="flex items-start">
          <span class="text-indigo-600 mr-2">•</span>
          <span>Get your access token from Fizzy profile → API → Personal access tokens</span>
        </li>
        <li class="flex items-start">
          <span class="text-indigo-600 mr-2">•</span>
          <span>Select or enter your account slug (e.g., /897362094)</span>
        </li>
        <li class="flex items-start">
          <span class="text-indigo-600 mr-2">•</span>
          <span>Leave card number empty to see a list of all cards with branch names</span>
        </li>
        <li class="flex items-start">
          <span class="text-indigo-600 mr-2">•</span>
          <span>Or enter a card number to view a specific card</span>
        </li>
        <li class="flex items-start">
          <span class="text-indigo-600 mr-2">•</span>
          <span>Select platform (Dashboard or Mobile) to generate branch names:</span>
          <ul class="ml-4 mt-1 space-y-1">
            <li class="flex items-start">
              <span class="text-indigo-400 mr-2">-</span>
              <span>Dashboard: <code class="bg-gray-100 px-1 rounded">49-send-photo-without-tap</code></span>
            </li>
            <li class="flex items-start">
              <span class="text-indigo-400 mr-2">-</span>
              <span>Mobile: <code class="bg-gray-100 px-1 rounded">49-mob-send-photo-without-tap</code></span>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>
